                    <p class="listing_details_text">Donec ullamcorper nulla non metus auctor fringi lla. Curabitur blandit tempus porttitor.</p>
                    <div class="rooms">

                        <div class="room">
                            <span class="room_title">Bedrooms</span>
                            <div class="room_content">
                                <div class="room_image"><img src="~/Content/Index/images/bedroom.png" alt=""></div>
                                <span class="room_number">   @Html.DisplayFor(model => model.Bed_Room)</span>
                            </div>
                        </div>

                        <div class="room">
                            <span class="room_title">Bathrooms</span>
                            <div class="room_content">
                                <div class="room_image"><img src="~/Content/Index/images/shower.png" alt=""></div>
                                <span class="room_number"> @Html.DisplayFor(model => model.Bath_Room)</span>
                            </div>
                        </div>

                        <div class="room">
                            <span class="room_title">Area</span>
                            <div class="room_content">
                                <div class="room_image"><img src="../Content/Index/images/area.png" alt=""></div>
                                <span class="room_number">   @Html.DisplayFor(model => model.Area)</span>
                            </div>
                        </div>

                        <div class="room">
                            <span class="room_title">Patio</span>
                            <div class="room_content">
                                <div class="room_image"><img src="~/Content/Index/images/patio.png" alt=""></div>
                                <span class="room_number">1</span>
