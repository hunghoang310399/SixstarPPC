<div class="home">

    <div class="home_background" style="background-image:url(../Content/Index/images/listings_single.jpg)"></div>

    <div class="container">
        <div class="row">
            <div class="col">
                <div class="home_content">
                    <div class="home_title">
                        <h2>single listings</h2>
                    </div>
                    <div class="breadcrumbs">
                        <span><a href="~/Home/Index">Home</a></span>
                        <span><a href="#"> Search</a></span>
                        <span><a href="~/Home/Collections"> Listings</a></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="listing">
