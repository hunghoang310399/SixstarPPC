                        <div class="featured_card_price_title trans_300">For Sale</div>

                        <div class="featured_card_price trans_300"> @string.Format("{0:0,0}",Model.Price) VND</div>
                    </div>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col">

                <!-- Listing Image Slider -->

                <div class="listing_slider_container">
                    <div class="owl-carousel owl-theme listing_slider">

                        <!-- Listing Slider Item -->
                        <div class="owl-item listing_slider_item">
                            <img src="@(Url.Content("~/Images/" + Model.Avatar))"  />
                        </div>

                        <!-- Listing Slider Item -->
                        <div class="owl-item listing_slider_item">
                            <img src="~/Content/Index/images/listing_slider_1.jpg" alt="">
                        </div>

                        <!-- Listing Slider Item -->
                        <div class="owl-item listing_slider_item">
                            <img src="~/Content/Index/images/listing_slider_1.jpg" alt="">
                        </div>

                        <!-- Listing Slider Item -->
                        <div class="owl-item listing_slider_item">
                            <img src="../Content/Index/images/listing_slider_1.jpg" alt="">
                        </div>

                        <!-- Listing Slider Item -->
                        <div class="owl-item listing_slider_item">
                            <img src="~/Content/Index/images/listing_slider_1.jpg" alt="">
                        </div>

                    </div>

                    <div class="listing_slider_nav listing_slider_prev d-flex flex-row align-items-center justify-content-center trans_200">
                        <img src="~/Content/Index/images/nav_left.png" alt="">
