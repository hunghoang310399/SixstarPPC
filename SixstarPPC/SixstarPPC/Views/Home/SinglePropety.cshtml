@model SixstarPPC.Models.Property
<link rel="stylesheet" type="text/css" href="~/Content/Index/styles/bootstrap4/bootstrap.min.css">
<link href="~/Content/Index/plugins/fontawesome-free-5.0.1/css/fontawesome-all.css" rel="stylesheet" type="text/css">
<link rel="stylesheet" type="text/css" href="~/Content/Index/plugins/OwlCarousel2-2.2.1/owl.carousel.css">
