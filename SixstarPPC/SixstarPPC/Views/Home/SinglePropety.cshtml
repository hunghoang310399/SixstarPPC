                        <div class="room">
                            <span class="room_title">Garage</span>
                            <div class="room_content">
                                <div class="room_image"><img src="~/Content/Index/images/garage.png" alt=""></div>
                                <span class="room_number">2</span>
                            </div>
                        </div>

                    </div>

                </div>

